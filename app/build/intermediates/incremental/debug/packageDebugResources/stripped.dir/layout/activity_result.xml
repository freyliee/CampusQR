<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Карточка студента"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/resultName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ФИО: —"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/resultTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/resultGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Группа: —"
        app:layout_constraintTop_toBottomOf="@id/resultName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/resultStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Статус: —"
        app:layout_constraintTop_toBottomOf="@id/resultGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✅ Доступ разрешён"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/resultStatus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/scanAgain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_again"
        app:layout_constraintTop_toBottomOf="@id/access"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>