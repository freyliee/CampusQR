<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    tools:context=".ResultActivity">

    <!-- Карточка -->
    <androidx.cardview.widget.CardView
        android:id="@+id/studentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="28dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1E1E1E"
        app:strokeColor="#2A2A2A"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scanAgain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resultTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Карточка студента"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="14dp" />

            <TextView
                android:id="@+id/resultName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ФИО: Иван Иванов"
                android:textColor="#E0E0E0"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/resultGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Группа: ИКБО-01"
                android:textColor="#E0E0E0"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/resultStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус: Студент"
                android:textColor="#E0E0E0"
                android:textSize="18sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ✅ Доступ разрешён"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Кнопка -->
    <Button
        android:id="@+id/scanAgain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сканировать ещё"
        android:textAllCaps="false"
        android:backgroundTint="#2979FF"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/studentCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
